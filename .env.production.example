# VedaCore Production Environment Configuration

# Environment
ENVIRONMENT=production

# Authentication (REQUIRED) - Choose ONE:
# Option 1: JWKS URL for managed identity providers (RECOMMENDED)
# AUTH_JWKS_URL=https://your-auth-provider/.well-known/jwks.json
# AUTH_AUDIENCE=your-api-audience
# AUTH_ISSUER=https://your-auth-provider/

# Option 2: HS256 shared secret (minimum 32 characters)
# Generate with: uv run python tools/generate_jwt_secret.py
AUTH_JWT_SECRET=your-production-jwt-secret-here-minimum-32-chars
AUTH_AUDIENCE=vedacore-api
AUTH_ISSUER=your-issuer
AUTH_LEEWAY_SEC=60

# Server Configuration
PORT=8000
WORKERS=4
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Security (REQUIRED for browser access)
# Comma-separated list of allowed origins - NO WILDCARDS in production
CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://your-dashboard.com
# Optional: Enable additional HTTP methods (security risk - use with caution)
# CORS_ALLOW_PUT=false
# CORS_ALLOW_DELETE=false

# Feature Flags
ACTIVATION_ENABLED=false
MOON_PUBLISHER_ENABLED=true

# Streaming Configuration
STREAM_PUBLISHER_ENABLED=true
STREAM_ALLOWED_TOPICS=kp.v1.moon.chain,kp.v1.signals,kp.v1.events

# Prometheus Monitoring
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus
METRICS_PORT=9090

# Performance Tuning
CACHE_TTL_SECONDS=300
MAX_CACHE_SIZE=10000
WARMUP_ON_STARTUP=true

# Security Headers
RATE_LIMIT_PER_MINUTE=1000
MAX_CONNECTIONS_PER_IP=50
